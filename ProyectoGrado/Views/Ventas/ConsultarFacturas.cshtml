@model IEnumerable<ServiciosDigitalesProy.Models.Factura>

@{
    ViewBag.Title = " Ventas";
    ViewBag.SubSeccion = "Consulta de Facturas";
}

<h3>@ViewBag.SubSeccion</h3>
<div class="col-lg-12">
    <!--breadcrumbs start -->
    <ul class="breadcrumb">
        <li><a href="#"><i class="fa fa-th-list"></i>@ViewBag.Title</a></li>
        <li class="active"><a href="#">@ViewBag.SubSeccion</a></li>
    </ul>
    <!--breadcrumbs end -->
</div>
<section class="panel">
    <div class="panel-body">
        <div class="tab-content">
            <div id="home-3" class="tab-pane active">
                <!-- page start-->
                <div class="row">
                    <div class="col-lg-12">
                        <section class="panel">
                            <header>

                            </header>
                            <div class="row">
                                <div class="col-md-10 col-md-offset-1">
                                    <div class="panel panel-default">
                                        <div class="panel-heading">
                                            Base de datos Facturas
                                        </div>
                                        <!-- /.panel-heading -->
                                        <div class="panel-body">
                                            <table class="table table-striped table-bordered table-hover" id="table-inicial">
                                                <thead>
                                                    <tr>
                                                        <td>
                                                            <b>Num factura</b>
                                                        </td>
                                                        <td>
                                                            <b>Fecha</b>
                                                        </td>
                                                        <td>
                                                            <b>Doc Cliente</b>
                                                        </td>
                                                        <td>
                                                            <b>Estado</b>
                                                        </td>
                                                        <td>
                                                            <b></b>
                                                        </td>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in Model)
                                                    {
                                                        <tr>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.id_factura)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.fecha)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.cliente.identificacion)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.estado.Descripcion)
                                                            </td>
                                                            <td>
                                                                <div class="row">
                                                                    <a href="@Url.Action("VerDetalleFactura"+ViewBag.titulo, null,  new { id = item.id_factura})">
                                                                        <span><i class="fa fa-history fa-2x" style="padding-right: 40px;padding-left: 20px;"></i></span>
                                                                    </a>
                                                                    <a href="@Url.Action("VerHistoricoFactura", null,  new { id = item.id_factura})">
                                                                        <span><i class="fa fa-pencil-square-o fa-2x"></i></span>
                                                                    </a>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                        <!-- /.panel-body -->
                                    </div>
                                    <!-- /.panel -->
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
                <!-- page end-->
            </div>
        </div>
    </div>
</section>
@*@Html.Partial("Partials/_Script")*@

@if ((string)TempData["mensaje"] != null || (string)TempData["mensaje"] != "")
{
    <script>
        $(function (msg) {
            $.bootstrapGrowl('@((string)TempData["mensaje"])', {
                type: '@((string)TempData["estado"])',
                offset: { from: 'top', amount: 100 }
            });
        });
    </script>
}

