@using ServiciosDigitalesProy.Models
@model ServiciosDigitalesProy.Models.Usuario

@{
    ViewBag.Title = "Usuarios";
    ViewBag.SubSeccion = "Detalles del Cliente "+Model.nombres;
}

<h3>@ViewBag.SubSeccion</h3>
<div class="col-lg-12">
    <!--breadcrumbs start -->
    <ul class="breadcrumb">
        <li><a href="#"><i class="fa fa-th-list"></i>@ViewBag.Title</a></li>
        <li class="active"><a href="#">@ViewBag.SubSeccion</a></li>
    </ul>
    <!--breadcrumbs end -->
</div>
<section class="panel">
    <div class="panel-body">
        <div class="tab-content">
            <div id="home-3" class="tab-pane active">
                <!-- page start-->
                <div class="row">
                    <div class="col-lg-12">
                        <section class="panel">
                            <header class="panel-heading tab-bg-dark-navy-blue tab-right ">
                                <ul class="nav nav-tabs pull-right">
                                    <li class="active">
                                        <a data-toggle="tab" href="#home-3">
                                            <i class="fa fa-circle" aria-hidden="true"></i>
                                            @ViewBag.SubSeccion
                                        </a>
                                    </li>
                                </ul>
                                
                            </header>
                            <div class="col-lg-12">
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        Base de datos Clientes
                                    </div>
                                    <!-- /.panel-heading -->
                                    <div class="panel-body">
                                        <table width="100%" class="table table-striped table-bordered table-hover" id="table-inicial">
                                            <thead>
                                                <tr>
                                                    <td>
                                                        <b>Dirección</b>
                                                    </td>
                                                    <td>
                                                        <b>Sexo</b>
                                                    </td>
                                                    <td>
                                                        <b>User Name</b>
                                                    </td>
                                                    <td>
                                                        <b>Email</b>
                                                    </td>
                                                    <td>
                                                        <b>Teléfono Celular</b>
                                                    </td>
                                                    <td>
                                                        <b>Teléfono Fijo</b>
                                                    </td>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                    <tr>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => Model.direccion)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => Model.sexo)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => Model.username)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => Model.email)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => Model.TelefonoCelular)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => Model.TelefonoFijo)
                                                        </td>

                                                    </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                    <!-- /.panel-body -->
                                </div>
                                <!-- /.panel -->
                            </div>

                            <div class="form-group">
                                <div class="col-md-2">
                                    @Html.ActionLink("Volver", "VolverDetallesCliente", new { id = Model.identificacion }, new { @class = "btn btn-primary" })
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
                <!-- page end-->
            </div>
        </div>
    </div>
</section>

