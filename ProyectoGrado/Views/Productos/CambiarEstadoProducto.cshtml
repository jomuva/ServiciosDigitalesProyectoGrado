@using ServiciosDigitalesProy.Models
@model ServiciosDigitalesProy.Models.Producto
@{
    ViewBag.Title = " Productos";
    ViewBag.SubSeccion = "Modificar Estado del Producto";
}

<h3>@ViewBag.SubSeccion</h3>
<div class="col-lg-12">
    <!--breadcrumbs start -->
    <ul class="breadcrumb">
        <li><a href="#"><i class="fa fa-th-list"></i>@ViewBag.Title</a></li>
        <li class="active"><a href="#">@ViewBag.SubSeccion</a></li>
    </ul>
    <!--breadcrumbs end -->
</div>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Datos del Producto
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            @using (Html.BeginForm("ModificarEstadoProducto", "Productos", FormMethod.Post))
                            {
                                <div class="form-group">
                                    <label>Código del Producto</label>
                                    @Html.TextBox("id_producto", Model.id_producto, new { @class = "form-control", @disabled = "disabled"})
                                </div>
                                @Html.Hidden("id_producto", Model.id_producto)

                                <div class="form-group">
                                    <label>Nombre Producto</label>
                                    @Html.TextBox("nombre",Model.nombre, new { @class = "form-control", @disabled = "disabled" })
                                </div>

                                <div class="form-group">
                                    <label>Estado</label>
                                    @Html.DropDownListFor(x => x.estado.id, Model.estadosProducto, null, new { @class = "form-control" })
                                </div>

                                <button type="submit" name="submitButton" id="submitButton" class="btn btn-primary">Aceptar</button>
                            }
                        </div>
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-6 -->
    </div>
    <!-- /.row -->
</div>