@using ServiciosDigitalesProy.Models
@model ServiciosDigitalesProy.Models.Inventario
@{
    ViewBag.Title = " Inventarios";
    ViewBag.SubSeccion = "Actualizar Inventario del producto";
}

<h3>@ViewBag.SubSeccion</h3>
<div class="col-lg-12">
    <!--breadcrumbs start -->
    <ul class="breadcrumb">
        <li><a href="#"><i class="fa fa-th-list"></i>@ViewBag.Title</a></li>
        <li class="active"><a href="#">@ViewBag.SubSeccion</a></li>
    </ul>
    <!--breadcrumbs end -->
</div>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Datos del Inventario
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            @using (Html.BeginForm("ActualizarInventarioXProducto", "Inventarios", FormMethod.Post))
                            {
                                @Html.Hidden("id_inventario", Model.id_inventario)
                                <div class="form-group">
                                    <label>Código del Producto</label>
                                    @Html.TextBox("producto.id_producto", Model.producto.id_producto, new { @class = "form-control", @disabled = "disabled" })
                                </div>
                                @Html.Hidden("producto.id_producto", Model.producto.id_producto)

                                <div class="form-group">
                                    <label>Cantidad Existencias Actual</label>
                                    @Html.TextBox("identificacion", Model.cantidadExistencias, new { @class = "form-control", @disabled = "disabled" })
                                </div>

                                <div class="form-group">
                                    <label>Cantidad de unidades a adicionar</label>
                                    @Html.TextBox("cantidadExistencias", Model.cantidadExistencias, new { @class = "form-control",@type ="number" })
                                    @Html.ValidationMessageFor(model => Model.cantidadExistencias, "", new { @class = "text-danger" })
                                </div>


                                <div class="row">
                                    <div class="col-md-5">
                                        <button type="submit" name="submitButton" id="submitButton" class="btn btn-success">Actualizar</button>
                                    </div>
                                    <div class="col-md-4">
                                        @Html.ActionLink("Volver", "VolverVistaInventarioXSucursal", null, new { @class = "btn btn-primary" })
                                    </div>
                                </div>
                               
                            }
                        </div>
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-6 -->
    </div>
    <!-- /.row -->


</div>

@if ((string)TempData["mensaje"] != null || (string)TempData["mensaje"] != "")
{
    <script>
        $(function (msg) {
            $.bootstrapGrowl('@((string)TempData["mensaje"])', {
                type: '@((string)TempData["estado"])',
                offset: { from: 'top', amount: 100 }
            });
        });
    </script>
}