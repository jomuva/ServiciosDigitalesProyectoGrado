@model ServiciosDigitalesProy.Models.Factura

@{
    ViewBag.Title = " Ventas";
    ViewBag.SubSeccion = "Consulta de Facturas";
}

<style>
      textarea {
        width: 250px;
        height: 100px;
    }
</style>
<h3>@ViewBag.SubSeccion</h3>
<div class="col-lg-12">
    <!--breadcrumbs start -->
    <ul class="breadcrumb">
        <li><a href="#"><i class="fa fa-th-list"></i>@ViewBag.Title</a></li>
        <li class="active"><a href="#">@ViewBag.SubSeccion</a></li>
    </ul>
    <!--breadcrumbs end -->
</div>
<section class="panel">
    <div class="panel-body">
        <div class="tab-content">
            <div id="home-3" class="tab-pane active">
                <!-- page start-->
                <div class="row">
                    <div class="col-lg-12">
                        <section class="panel">
                            <header></header>
                            <div class="row">
                                <div class="col-md-10 col-md-offset-1">
                                    <div class="panel panel-default">
                                        <div class="panel-heading">
                                            Anular Factura
                                        </div>
                                        <!-- /.panel-heading -->
                                        @using (Html.BeginForm("AnularFactura", "Ventas", FormMethod.Post, new { @id = "Form1" }))
                                        {

                                            <div class="form-horizontal col-md-8">
                                                <hr />
                                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                                <div class="row">
                                                    <div class="form-group">
                                                        @Html.Label("Código Factura:", htmlAttributes: new { @class = "control-label col-md-7" })
                                                        <div class="col-md-5">
                                                            @Html.EditorFor(model => model.id_factura, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                                        </div>
                                                        @*@Html.Hidden("id_servicio", Model.id_servicio)*@
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="form-group">
                                                        @Html.Label("Motivo :", htmlAttributes: new { @class = "control-label col-md-5 col-md-offset-2" })
                                                        <div class="col-md-5 inputGroupContainer">
                                                            <div class="input-group">
                                                                @Html.TextAreaFor(model => model.estado.Descripcion, new { htmlAttributes = new { @class = "form-control", placeholder = "Descripción", @maxlength = "100", @type = "text" } })
                                                            </div>
                                                            @Html.ValidationMessageFor(model => model.estado.Descripcion, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <div class="col-md-offset-7 col-md-2">
                                                            <input type="submit" id="Aceptar" value="Anular" class="btn btn-danger" />
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>
                                        }
                                        <!-- /.panel-body -->
                                    </div>
                                    <!-- /.panel -->
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
                <!-- page end-->
            </div>
        </div>
    </div>
</section>
@*@Html.Partial("Partials/_Script")*@

@if ((string)TempData["mensaje"] != null || (string)TempData["mensaje"] != "")
{
    <script>
        $(function (msg) {
            $.bootstrapGrowl('@((string)TempData["mensaje"])', {
                type: '@((string)TempData["estado"])',
                offset: { from: 'top', amount: 100 }
            });
        });
    </script>
}

