@model ServiciosDigitalesProy.Models.Solicitud

@{
    ViewBag.Title = " Solicitudes";
    ViewBag.SubSeccion = "Consulta de Solicitud No " + ViewBag.idSolicitud;
}
<style>
    .panel {
        margin-bottom: 0px;
        margin-top: 0px;
    }
</style>
<h3>@ViewBag.SubSeccion</h3>

@Html.Partial("Partials/_ModalAnotacion")

<div class="col-lg-12">
    <!--breadcrumbs start -->
    <ul class="breadcrumb">
        <li><a href="#"><i class="fa fa-th-list"></i>@ViewBag.Title</a></li>
        <li class="active"><a href="#">@ViewBag.SubSeccion</a></li>
    </ul>
    <!--breadcrumbs end -->
</div>
<section class="panel">
    <div class="panel-body">
        <div class="tab-content">
            <div id="home-3" class="tab-pane active">
                <!-- page start-->
                <div class="row">
                    <div class="col-lg-12">
                        <section class="panel">
                            <header class="panel-heading tab-bg-dark-navy-blue tab-right ">
                                <!-- /.INICIO DE BOTONES -->
                                <div class="row">
                                    <div class="col-lg-3 col-md-6">
                                        <div class="panel panel-yellow">
                                            <div class="panel-heading">
                                                <div class="row">
                                                    <div class="col-xs-3">
                                                        <i class="fa fa-edit fa-5x"></i>
                                                    </div>
                                                    <div class="col-xs-9 text-right">
                                                        <div class="huge">Add</div>
                                                        <div>Annotation</div>
                                                    </div>
                                                </div>
                                            </div>
                                            @*<a href="@Url.Action("AgregarAnotacion", "Solicitudes",  new { id = Model.id_solicitud })">*@
                                            <a id="btnAnotacion" data-toggle="modal" href="#miModalAnotacion" data-id="@Model.id_solicitud">
                                                <div class="panel-footer">
                                                    <span class="pull-left">Agregar Anotación</span>
                                                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                                                    <div class="clearfix"></div>
                                                </div>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="col-lg-3 col-md-6">
                                        <div class="panel panel-red">
                                            <div class="panel-heading">
                                                <div class="row">
                                                    <div class="col-xs-3">
                                                        <i class="fa fa-history fa-4x"></i>
                                                    </div>
                                                    <div class="col-xs-9 text-right">
                                                        <div class="huge">History</div>
                                                        <div>Request</div>
                                                    </div>
                                                </div>
                                            </div>
                                            <a href="@Url.Action("ConsultarHistorico", "Solicitudes",  new { id = Model.id_solicitud })">
                                                <div class="panel-footer">
                                                    <span class="pull-left">Ver Histórico</span>
                                                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                                                    <div class="clearfix"></div>
                                                </div>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <!-- /.FIN DE LOS BOTONES -->

                            </header>
                            <div class="row">
                                <div class="form-group">
                                    <div class="col-md-2">
                                        @Html.ActionLink("Volver", "ConsultarSolicitudes", null, new { @class = "btn btn-primary" })
                                    </div>
                                </div>
                            </div>
                            <ul class="nav nav-tabs col-md-4 col-md-offset-5">
                                <li class="active">
                                    <a data-toggle="tab" href="#home-3">
                                        <i class="fa fa-circle" aria-hidden="true"></i>
                                        @ViewBag.SubSeccion
                                    </a>
                                </li>
                            </ul>
                            
                            <div class="col-md-8 col-md-offset-2">
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <b>Datos del Cliente</b>
                                    </div>
                                    <!-- /.panel-heading -->
                                    <div class="panel-body">
                                        <div class="adv-table">
                                            <div class="row">
                                                <div class="col-lg-4">
                                                    @Html.Label("Identificación Cliente:")
                                                </div>
                                                <div class="col-lg-2">
                                                    @Html.DisplayFor(modelItem => modelItem.cliente.identificacion)
                                                </div>
                                                <div class="col-lg-3">
                                                    @Html.Label("Nombre Cliente:")
                                                </div>
                                                <div class="col-lg-3">
                                                    @Html.DisplayFor(modelItem => modelItem.cliente.nombres) @Html.DisplayFor(modelItem => modelItem.cliente.apellidos)
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- /.panel-body -->
                                </div>
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <b> Servicio</b>
                                    </div>
                                    <!-- /.panel-heading -->
                                    <div class="panel-body">
                                        <div class="adv-table">
                                            <div class="row">
                                                <div class="col-lg-2">
                                                    @Html.Label("Descripción:")
                                                </div>
                                                <div class="col-lg-10">
                                                    @Html.DisplayFor(modelItem => modelItem.servicio.descripcion)
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- /.panel-body -->
                                </div>
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <b>Detalle Solicitud</b>
                                    </div>
                                    <!-- /.panel-heading -->
                                    <div class="panel-body">
                                        <div class="adv-table">
                                            <div class="row">
                                                <div class="col-lg-2">
                                                    @Html.Label("Fecha:")
                                                </div>
                                                <div class="col-lg-4">
                                                    @Html.DisplayFor(modelItem => modelItem.fecha)
                                                </div>
                                                <div class="col-lg-2">
                                                    @Html.Label("Prioridad:")
                                                </div>
                                                <div class="col-lg-4">
                                                    @Html.DisplayFor(modelItem => modelItem.prioridadSolicitud.Descripcion)
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-lg-2">
                                                    @Html.Label("Estado:")
                                                </div>
                                                <div class="col-lg-6">
                                                    <b>@Html.DisplayFor(modelItem => modelItem.estadoSolicitud.Descripcion)</b>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-lg-2">
                                                    @Html.Label("Descripción:")
                                                </div>
                                                <div class="col-lg-10">
                                                    @Html.DisplayFor(modelItem => modelItem.descripcion)
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- /.panel-body -->
                                </div>

                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <b> Detalle Elemento</b>
                                    </div>
                                    <!-- /.panel-heading -->
                                    <div class="panel-body">
                                        <div class="adv-table">
                                            @if (Model.elemento.modelo != "No tiene elemento asignado")
                                            {
                                                <div class="row">
                                                    <div class="col-lg-2">
                                                        @Html.Label("Tipo:")
                                                    </div>
                                                    <div class="col-lg-4">
                                                        @Html.DisplayFor(modelItem => modelItem.elemento.tipoElemento.Descripcion)
                                                    </div>
                                                    <div class="col-lg-2">
                                                        @Html.Label("Categoría:")
                                                    </div>
                                                    <div class="col-lg-4">
                                                        @Html.DisplayFor(modelItem => modelItem.elemento.categoriaElemento.Descripcion)
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-lg-2">
                                                        @Html.Label("Serial:")
                                                    </div>
                                                    <div class="col-lg-2">
                                                        @Html.DisplayFor(modelItem => modelItem.elemento.serial)
                                                    </div>
                                                    <div class="col-lg-2">
                                                        @Html.Label("Placa:")
                                                    </div>
                                                    <div class="col-lg-4">
                                                        @Html.DisplayFor(modelItem => modelItem.elemento.placa)
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-lg-2">
                                                        @Html.Label("Modelo:")
                                                    </div>
                                                    <div class="col-lg-2">
                                                        @Html.DisplayFor(modelItem => modelItem.elemento.modelo)
                                                    </div>
                                                    <div class="col-lg-2">
                                                        @Html.Label("Marca:")
                                                    </div>
                                                    <div class="col-lg-4">
                                                        @Html.DisplayFor(modelItem => modelItem.elemento.marca)
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-lg-2">
                                                        @Html.Label("RAM:")
                                                    </div>
                                                    <div class="col-lg-2">
                                                        @Html.DisplayFor(modelItem => modelItem.elemento.ram)
                                                    </div>
                                                    <div class="col-lg-2">
                                                        @Html.Label("ROM:")
                                                    </div>
                                                    <div class="col-lg-4">
                                                        @Html.DisplayFor(modelItem => modelItem.elemento.rom)
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-lg-4">
                                                        @Html.Label("Serial Batería:")
                                                    </div>
                                                    <div class="col-lg-2">
                                                        @Html.DisplayFor(modelItem => modelItem.elemento.serialBateria)
                                                    </div>
                                                    <div class="col-lg-4">
                                                        @Html.Label("Sistema Operativo:")
                                                    </div>
                                                    <div class="col-lg-2">
                                                        @Html.DisplayFor(modelItem => modelItem.elemento.SO)
                                                    </div>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="row">
                                                    <div class="col-lg-12">
                                                        @Html.Label("No existe un elemento asociado a esta solicitud")
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                    <!-- /.panel-body -->
                                </div>
                               
                                <!-- /.panel -->
                            </div>
                          
                        </section>
                    </div>
                </div>
                <!-- page end-->
            </div>
        </div>
    </div>
</section>
@if ((string)TempData["mensaje"] != null || (string)TempData["mensaje"] != "")
{
    <script>
        $(function (msg) {
            $.bootstrapGrowl('@((string)TempData["mensaje"])', {
                type: '@((string)TempData["estado"])',
                offset: { from: 'top', amount: 100 }
            });
        });
    </script>
}
@section Scripts {
    <script src="~/Xcore/Scripts/Modales/ModalElemento.js"></script>
}

