@model IEnumerable<ServiciosDigitalesProy.Models.Elemento>

@{
    Layout = null;
}

<section class="panel">
    <div class="panel-body">
        <div class="tab-content">
            <div id="home-3" class="tab-pane active">
                <!-- page start-->
                <div class="row">
                    <div class="col-lg-12">
                        <section class="panel">
                            <div class="col-lg-12">
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        Elemento
                                    </div>
                                    <!-- /.panel-heading -->
                                    <div class="panel-body">
                                        <table width="100%" class="table table-striped table-bordered table-hover" id="table-inicial">
                                            <thead>
                                                <tr>
                                                    <td>
                                                        <b>Tipo</b>
                                                    </td>
                                                    <td>
                                                        <b>Serial</b>
                                                    </td>
                                                    <td>
                                                        <b>Modelo</b>
                                                    </td>
                                                    <td>
                                                        <b>Marca</b>
                                                    </td>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model)
                                                {
                                                    <tr>
                                                        <td>
                                                            @Html.DisplayFor(x => item.tipoElemento.Descripcion)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(x => item.serial)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(x => item.modelo)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(x => item.marca)
                                                        </td>
                                                        <td>
                                                            @Html.ActionLink("Asignar", "AsignarElemento", new { id = item.id_elemento }) 
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                    <!-- /.panel-body -->
                                </div>
                                @*<div class="form-group">
                                    <div class="col-md-2">
                                        @Html.ActionLink("Volver", "VolverDetallesProducto", new
                                    </div>
                                </div>*@
                                <!-- /.panel -->
                            </div>
                        </section>
                    </div>
                </div>
                <!-- page end-->
            </div>
        </div>
    </div>
</section>
@if ((string)TempData["mensaje"] != null || (string)TempData["mensaje"] != "")
{
    <script>
        $(function (msg) {
            $.bootstrapGrowl('@((string)TempData["mensaje"])', {
                type: '@((string)TempData["estado"])',
                offset: { from: 'top', amount: 100 }
            });
        });
    </script>
}

