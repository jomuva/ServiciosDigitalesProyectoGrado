<!DOCTYPE html>
<html>
@using ServiciosDigitalesProy.Models
@model ServiciosDigitalesProy.Models.Usuario
@{
    ViewBag.Title = "Iniciar sesión Servicios Digitales";
}
<head>
    @Html.Partial("_Head")
</head>

<body style = "background-image:url('/Xcore/Imagenes/fondologinFinal7.png'); background-repeat: no-repeat; background-attachment: fixed;" > 
    @using (Html.BeginForm("Login", "Home", null, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {

        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-7">
                    
                    
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <span class="fa fa-lock"></span> Login
                        </div>
                        <div class="panel-body">
                            <form class="form-horizontal" role="form">
                                <div class="form-group">
                                    <label for="nokp" class="col-sm-3 control-label">
                                        Usuario
                                    </label>
                                    <div class="col-sm-9">
                                        @Html.TextBoxFor(m => m.username, new { @class = "form-control", @placeholder = "usuario" })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label for="nopend" class="col-sm-3 control-label">
                                        Contraseña
                                    </label>
                                    <div class="col-sm-9">
                                        @Html.PasswordFor(m => m.password, new { @class = "form-control" })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-offset-3 col-sm-9">
                                        <div class="checkbox">
                                            <label>
                                                <input type="checkbox" />
                                                Recordarme
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group last">
                                    <div class="col-sm-offset-3 col-sm-9">
                                        <button type="submit" class="btn btn-success btn-sm">
                                            Iniciar
                                        </button>
                                        <button type="reset" class="btn btn-default btn-sm">
                                            Limpiar
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="panel-footer">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


    @*@Html.Partial("_Scripts")*@
    @*@RenderSection("scripts", required: false)*@
    <!--Section Scripts-->
</body>

</html>
