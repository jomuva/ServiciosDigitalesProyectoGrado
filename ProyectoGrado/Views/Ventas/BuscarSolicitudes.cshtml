@model IEnumerable<ServiciosDigitalesProy.Models.Solicitud>

@{
    Layout = null;
}


<section class="panel">
    <div class="panel-body">
        <div class="tab-content">
            <div id="home-3" class="tab-pane active">
                <!-- page start-->
                <div class="row">
                    <div class="col-lg-12">
                        <section class="panel">
                            <div class="col-lg-12">
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <b>Solicitudes del cliente @ViewBag.NombreCliente</b>
                                    </div>
                                    <!-- /.panel-heading -->
                                    <div class="panel-body">
                                        <table width="100%" class="table table-striped table-bordered table-hover" id="table-inicial">
                                            <thead>
                                                <tr>
                                                    <td>
                                                        <b>Descripción del Servicio</b>
                                                    </td>
                                                    <td>
                                                        <b>Fecha</b>
                                                    </td>
                                                    <td>
                                                        <b>Estado</b>
                                                    </td>
                                                    <td>
                                                        <b>Prioridad</b>
                                                    </td>
                                                    @if (ValidadorPermisos.TienePermiso(RolesPermisos.Puede_Ver_Columna_Empleado_Asignado))
                                                    {
                                                        <td>
                                                            <b>Empleado Asignado</b>
                                                        </td>
                                                    }
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @if (Model.Count() != 0)
                                                {
                                                    foreach (var item in Model)
                                                    {
                                                        <tr>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.servicio.descripcion)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.fecha)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.estadoSolicitud.Descripcion)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.prioridadSolicitud.Descripcion)
                                                            </td>
                                                            @if (ValidadorPermisos.TienePermiso(RolesPermisos.Puede_Ver_Columna_Empleado_Asignado))
                                                            {
                                                                <td>
                                                                    @Html.DisplayFor(modelItem => item.Empleado)
                                                                </td>
                                                            }
                                                            <td>
                                                                @Html.ActionLink("Agregar", "AdicionarSolicitudAFactura", new RouteValueDictionary(new { id = item.id_solicitud }))
                                                            </td>
                                                        </tr>
                                                    }
                                                }
                                                else
                                                {
                                                    <tr><td style="color: red;"><b>No hay solicitudes asociadas para el cliente.</b></td></tr>
                                                }

                                            </tbody>
                                        </table>

                                    </div>
                                    <!-- /.panel-body -->
                                </div>
                                <!-- /.panel -->
                            </div>
                        </section>
                    </div>
                </div>
                <!-- page end-->
            </div>
        </div>
    </div>
</section>
