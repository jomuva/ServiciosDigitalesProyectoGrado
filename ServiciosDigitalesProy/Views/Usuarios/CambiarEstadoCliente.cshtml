@using ServiciosDigitalesProy.Models
@model ServiciosDigitalesProy.Models.Usuario
@{
    ViewBag.Title = "Modificar Estado del Cliente";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Estado del Cliente</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Datos del cliente
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            @using (Html.BeginForm("ModificarEstadoCliente", "Usuarios", FormMethod.Post))
                            {
                                <div class="form-group">
                                    <label>No Identificación</label>
                                    @Html.TextBox("identificacion", Model.identificacion, new { @class = "form-control", @disabled = "disabled"})
                                </div>
                                @Html.Hidden("identificacion", Model.identificacion)

                                <div class="form-group">
                                    <label>Nombre Cliente</label>
                                    @Html.TextBox("identificacion",Model.nombres, new { @class = "form-control", @disabled = "disabled" })
                                </div>

                                <div class="form-group">
                                    <label>Estado</label>
                                    @Html.DropDownListFor(x => x.idEstado, Model.tiposEstado, null, new { @class = "form-control" })
                                </div>

                                <button type="submit" name="submitButton" id="submitButton" class="btn btn-primary">Aceptar</button>
                            }
                        </div>
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-6 -->
    </div>
    <!-- /.row -->
</div>