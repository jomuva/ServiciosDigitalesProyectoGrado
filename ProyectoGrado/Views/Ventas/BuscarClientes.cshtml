@model IEnumerable<ServiciosDigitalesProy.Models.Usuario>

@{
    Layout = null;
}


<section class="panel">
    <div class="panel-body">
        <div class="tab-content">
            <div id="home-3" class="tab-pane active">
                <!-- page start-->
                <div class="row">
                    <div class="col-lg-12">
                        <section class="panel">
                            <div class="col-lg-12">
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        Base de datos Clientes <b>Activos</b>
                                    </div>
                                    <!-- /.panel-heading -->
                                    <div class="panel-body">
                                        <table width="100%" class="table table-striped table-bordered table-hover" id="table-inicial">
                                            <thead>
                                                <tr>
                                                    <td>
                                                        <b>Nombres</b>
                                                    <td>
                                                        <b>Apellidos</b>
                                                    </td>
                                                    <td>
                                                        <b>Identificación</b>
                                                    </td>
                                                    <td>
                                                        <b>Email</b>
                                                    </td>
                                                    <td>
                                                        <b>Estado</b>
                                                    </td>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                               @if (Model.Count() != 0)
                                               {
                                                   foreach (var item in Model)
                                                   {
                                                        <tr>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.nombres)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.apellidos)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.identificacion)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.email)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.estado)
                                                            </td>
                                                            <td>
                                                                @Html.ActionLink("Asignar", "AsignarCliente", new { id = item.identificacion })
                                                            </td>
                                                        </tr>
                                                   }
                                               }
                                               else
                                               {
                                                <tr><td style = "color: red;"><b> No hay Clientes en Estado Activo.  Verifique la información con el Administrador</b></td></tr>
                                               }
                                        </tbody>
                                    </table>
                                </div>
                                    <!-- /.panel-body -->
                                </div>
                                <!-- /.panel -->
                            </div>
                        </section>
                    </div>
                </div>
                <!-- page end-->
            </div>
        </div>
    </div>
</section>

