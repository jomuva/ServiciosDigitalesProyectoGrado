@model IEnumerable<ServiciosDigitalesProy.Models.Inventario>
@*@using ServiciosDigitalesProy.Models
@model List<TipoIdentificacion>*@
@{
    ViewBag.Title = " Inventarios";
    ViewBag.SubSeccion = "Consultar Inventario ";
}
<style>
    .error {
        color: #e20e0e;
    }
</style>

<h3>@ViewBag.SubSeccion</h3>
<div class="col-lg-12">
    <!--breadcrumbs start -->
    <ul class="breadcrumb">
        <li><a href="#"><i class="fa fa-th-list"></i>@ViewBag.Title</a></li>
        <li class="active"><a href="#">@ViewBag.SubSeccion</a></li>
    </ul>
    <!--breadcrumbs end -->
</div>
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Consultar Inventario
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            @using (Html.BeginForm("ConsultarInventarios", "Inventarios", FormMethod.Post, new { @id = "Form1" }))
                            {
                                <div class="form-group">
                                    <label>Ingrese Nombre o Código del producto</label>
                                    @Html.TextBox("identificacion", String.Empty, new { @class = "form-control"})
                                </div>
                                <button type="submit" name="submitButton" id="submitButton" class="btn btn-primary">Consultar</button>
                             } 
                        </div>
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-6 -->
    </div>
    <!-- /.row -->
</div>
<script>
    //$.validator.setDefaults({
    //    debug: true,
    //    success: "valid"
    //});
    $.validator.addMethod("caracteres", function (value, element) {
        return this.optional(element) || /^[0-9a-zA-ZáéíóúÁÉÍÓÚ ]+$/i.test(value);
    }, "No se permiten caracteres especiales");

    $("#Form1").validate({
        rules: {
            identificacion: {
                caracteres: true
            }
        }
    });

</script>
@if ((string)TempData["mensaje"] != null || (string)TempData["mensaje"] != "")
{
    <script>
        $(function (msg) {
            $.bootstrapGrowl('@((string)TempData["mensaje"])', {
                type: '@((string)TempData["estado"])',
                offset: { from: 'top', amount: 100 }
            });
        });
    </script>
}

 