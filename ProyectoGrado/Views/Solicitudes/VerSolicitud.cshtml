@model ServiciosDigitalesProy.Models.Solicitud

@{
    ViewBag.Title = " Solicitudes";
    ViewBag.SubSeccion = "Consulta de Solicitud No " + ViewBag.idSolicitud;
}
<style>
    .panel {
        margin-bottom: 0px;
    }
</style>
<h3>@ViewBag.SubSeccion</h3>
<div class="col-lg-12">
    <!--breadcrumbs start -->
    <ul class="breadcrumb">
        <li><a href="#"><i class="fa fa-th-list"></i>@ViewBag.Title</a></li>
        <li class="active"><a href="#">@ViewBag.SubSeccion</a></li>
    </ul>
    <!--breadcrumbs end -->
</div>
<section class="panel">
    <div class="panel-body">
        <div class="tab-content">
            <div id="home-3" class="tab-pane active">
                <!-- page start-->
                <div class="row">
                    <div class="col-lg-12">
                        <section class="panel">
                            <header class="panel-heading tab-bg-dark-navy-blue tab-right ">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="btn-actions">
                                            @if (ValidadorPermisos.TienePermiso(RolesPermisos.Puede_consultar_historico_solicitud))
                                            {
                                                 @Html.ActionLink("Historico", "GenerarSolicitud", "", new { @class = "btn btn-danger pull-right" })
                                            }
                                        </div>
                                    </div>
                                </div>
                                <ul class="nav nav-tabs col-md-4 col-md-offset-5">
                                    <li class="active">
                                        <a data-toggle="tab" href="#home-3">
                                            <i class="fa fa-circle" aria-hidden="true"></i>
                                            @ViewBag.SubSeccion
                                        </a>
                                    </li>
                                </ul>
                            </header>
                            <div class="col-md-8 col-md-offset-2">
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        Datos del Cliente
                                    </div>
                                    <!-- /.panel-heading -->
                                    <div class="panel-body">
                                        <div class="adv-table">
                                            <div class="row">
                                                <div class="col-lg-4">
                                                    @Html.Label("Identificación Cliente:")
                                                </div>
                                                <div class="col-lg-2">
                                                    @Html.DisplayFor(modelItem => modelItem.cliente.identificacion)
                                                </div>
                                                <div class="col-lg-3">
                                                    @Html.Label("Nombre Cliente:")
                                                </div>
                                                <div class="col-lg-3">
                                                    @Html.DisplayFor(modelItem => modelItem.cliente.nombres) @Html.DisplayFor(modelItem => modelItem.cliente.apellidos)
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- /.panel-body -->
                                </div>
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        Servicio
                                    </div>
                                    <!-- /.panel-heading -->
                                    <div class="panel-body">
                                        <div class="adv-table">
                                            <div class="row">
                                                <div class="col-lg-2">
                                                    @Html.Label("Descripción:")
                                                </div>
                                                <div class="col-lg-10">
                                                    @Html.DisplayFor(modelItem => modelItem.servicio.descripcion)
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- /.panel-body -->
                                </div>
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        Detalle Solicitud
                                    </div>
                                    <!-- /.panel-heading -->
                                    <div class="panel-body">
                                        <div class="adv-table">
                                            <div class="row">
                                                <div class="col-lg-2">
                                                    @Html.Label("Fecha:")
                                                </div>
                                                <div class="col-lg-4">
                                                    @Html.DisplayFor(modelItem => modelItem.fecha)
                                                </div>
                                                <div class="col-lg-2">
                                                    @Html.Label("Prioridad:")
                                                </div>
                                                <div class="col-lg-4">
                                                    @Html.DisplayFor(modelItem => modelItem.prioridadSolicitud.Descripcion)
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-lg-2">
                                                    @Html.Label("Estado:")
                                                </div>
                                                <div class="col-lg-6">
                                                    <b>@Html.DisplayFor(modelItem => modelItem.estadoSolicitud.Descripcion)</b>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-lg-2">
                                                    @Html.Label("Descripción:")
                                                </div>
                                                <div class="col-lg-10">
                                                    @Html.DisplayFor(modelItem => modelItem.descripcion)
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- /.panel-body -->
                                </div>

                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        Detalle Elemento
                                    </div>
                                    <!-- /.panel-heading -->
                                    <div class="panel-body">
                                        <div class="adv-table">
                                            @if (Model.elemento.modelo != "No tiene elemento asignado")
                                            {
                                                <div class="row">
                                                    <div class="col-lg-4">
                                                        @Html.Label("Tipo Elemento:")
                                                    </div>
                                                    <div class="col-lg-8">
                                                        <b> @Html.DisplayFor(modelItem => modelItem.elemento.tipoElemento.Descripcion)</b>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-lg-2">
                                                        @Html.Label("Serial:")
                                                    </div>
                                                    <div class="col-lg-10">
                                                        @Html.DisplayFor(modelItem => modelItem.elemento.serial)
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-lg-2">
                                                        @Html.Label("Modelo:")
                                                    </div>
                                                    <div class="col-lg-4">
                                                        @Html.DisplayFor(modelItem => modelItem.elemento.modelo)
                                                    </div>
                                                    <div class="col-lg-2">
                                                        @Html.Label("Marca:")
                                                    </div>
                                                    <div class="col-lg-4">
                                                        @Html.DisplayFor(modelItem => modelItem.elemento.marca)
                                                    </div>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="row">
                                                    <div class="col-lg-12">
                                                        @Html.Label("No existe un elemento asociado a esta solicitud")
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                    <!-- /.panel-body -->
                                </div>
                                <!-- /.panel -->
                            </div>
                        </section>
                    </div>
                </div>
                <!-- page end-->
            </div>
        </div>
    </div>
</section>
@if ((string)TempData["mensaje"] != null || (string)TempData["mensaje"] != "")
{
    <script>
        $(function (msg) {
            $.bootstrapGrowl('@((string)TempData["mensaje"])', {
                type: '@((string)TempData["estado"])',
                offset: { from: 'top', amount: 100 }
            });
        });
    </script>
}

